{# Single secret injection as environment variable #}
{# Usage: {{ m.secret("openai_api_key", "OPENAI_API_KEY") }} #}
{% macro secret(secret_name, env_target) %}
Secret={{ secret_name }},type=env,target={{ env_target }}
{% endmacro %}

{# Single secret injection as file mount #}
{# Usage: {{ m.secretFile("tls_cert", "/etc/ssl/cert.pem") }} #}
{% macro secretFile(secret_name, file_target) %}
Secret={{ secret_name }},type=mount,target={{ file_target }}
{% endmacro %}

